/* pages/ucenter/luckdraw/luckdraw.wxss */
page {
  background: #f4f4f4;
}
.luck_goods_box {
  position: relative;
  background: #fff;
   /* border: 1px solid black;  */
  width: 96vw;
  height: 230rpx;
  margin: 0 auto;
  /* padding: 15rpx; */
  border-radius: 8rpx;
   margin-top: 15rpx;
   margin-bottom: 20rpx;
  /* -moz-box-shadow:0 0 10px #06c; */
  /* -webkit-box-shadow:0 0 10px #06c; */
  box-shadow:0 0 10px #ccc;
}
.luck_goods_box_img {
  position: absolute;
  width: 208rpx;
  height: 208rpx;
  /* border: 1px solid black;  */
  top: 10rpx;
  left: 10rpx;
}
.luck_goods_box_name {
  position: absolute;
  left: 223rpx;
  right: 10rpx;
  /* border: 1px solid black; */
  top: 10rpx;
  text-indent: 1.25em;
  height: 84rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}
/* .luck_goods_box_desp {
  position: absolute;
} */
.luck_goods_have_join_people {
  position: absolute;
  left: 223rpx; 
  /* right: 5rpx; */
  /* border: 1px solid black; */
  top: 120rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 20rpx;
  color: #555;
  padding: 0rpx 8rpx;
}
.luck_goods_have_join_people .big,.luck_goods_price .big {
  color: #ff5566;
  font-size: 30rpx;
  font-weight: bold;
}
.luck_goods_price {
  position: absolute;
  /* left: 217rpx;  */
   right: 10rpx; 
   /* border: 1px solid black;  */
  top: 120rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 20rpx;
  padding: 0rpx 8rpx;
}
.luck_goods_box_time {
  position: absolute;
  font-size: 20rpx;
  color: #757575;
  left: 223rpx;
  bottom: 10rpx;
  padding: 0rpx 8rpx;
}
.luck_goods_box_btn {
  position: absolute;
  font-size: 20rpx;
  /* color: #757575; */
  right: 10rpx;
  bottom: 10rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0rpx 25rpx;
  letter-spacing: 1rpx;
  font-weight: bold;
}
.luck_goods_box_btn.join_btn {
  background: #ff5566;
  color: #f4f4f4;
}
.luck_goods_box_btn.see_btn {
  background: #4b96bd;
  color: #f4f4f4;
}
.luck_goods_box_btn.after_btn {
  background: #5dd4a4;
  color: #f4f4f4;
}
.no_luck_draw {
  font-size: 24rpx;
  color: #757575;
  text-align: center;
  padding-top: 45vh;
}